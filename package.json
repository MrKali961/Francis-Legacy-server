{
  "name": "francis-legacy-backend",
  "version": "1.0.0",
  "description": "Backend API for Francis Legacy family website",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "npm run clean && npm run copy-files",
    "clean": "rimraf dist",
    "copy-files": "cp -r src dist && cp package*.json dist/",
    "build:prod": "npm run build && cd dist && npm ci --only=production",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "family",
    "heritage",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-presigned-post": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
