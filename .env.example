# Francis Legacy Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Secret (MUST be a strong random string - generate with: openssl rand -hex 32)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket_name

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com

# S3 Public URL (for displaying images)
S3_PUBLIC_URL=https://your-bucket.s3.region.amazonaws.com

# Email Configuration (for user notifications)
EMAIL_USER=your_email@domain.com
EMAIL_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME="Francis Legacy"

# AWS SES Configuration (production email)
AWS_SES_ACCESS_KEY=your_ses_access_key
AWS_SES_SECRET_KEY=your_ses_secret_key

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log